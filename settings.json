{
    "workbench.colorTheme": "Noctis Azureus",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": false,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "flake8.args": [
        "--max-line-length=88"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.profiles.linux": {
        "bash": {
          "path": "bash",
          "icon": "terminal-bash",
          "args": ["-l"]
        },
        "zsh": {
          "path": "zsh"
        },
        "fish": {
          "path": "fish"
        },
        "tmux": {
          "path": "tmux",
          "icon": "terminal-tmux"
        },
        "pwsh": {
          "path": "pwsh",
          "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "git.terminalAuthentication": false,
    "remote.SSH.enableRemoteCommand": true,
    "remote.SSH.useLocalServer": true,
    "remote.SSH.configFile": "/.../.ssh/config",
    "vscode-neovim.neovimInitVimPaths.darwin": "/.../.config/nvim/init.vim ",
    "files.insertFinalNewline": true,
    "python.terminal.activateEnvironment": false,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": true,   // auto import
    "python.analysis.packageIndexDepths": [ // auto import
      {"name": "", "depth": 3, "includeAllSymbols": true,}
    ],
    "python.analysis.indexing": true,  // auto import
    "editor.wordWrap": "on",
    "hediet.vscode-drawio.theme": "min",
    "github.copilot.enable": {
      "*": true,
      "plaintext": true,
      "markdown": true,
      "scminput": false
    },
    "cSpell.userWords": [
      "ndarray",
      "wavread",
      "wavwrite"
    ],
    "markdown.marp.themes": [
      "theme/en.css"
    ],
    "markdown.marp.enableHtml": true,
    "markdown-pdf.displayHeaderFooter": false,
    "notebook.lineNumbers": "on",
    "hediet.vscode-drawio.resizeImages": null,
    "update.mode": "none",
    "editor.largeFileOptimizations": false,
}
